
<div class="container  ">
  
  <div class= "col-sm-offset-4 col-sm-4">
<%= image_tag "logo.png" , class: "centrado logo"%>

  <h2 class="centrado"> Iniciar sesión</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
  
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, :placeholder => "Usuario",:class => "form-signin" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password, autocomplete: "off",:placeholder => "Contraseña",:class => "form-signin" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Recuerdame %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", :class => "btn btn-lg btn-primary cemex-red btn-entrada btn-block"%>
  </div>
<% end %>
 
<%= render "users/shared/links"%>

</div>
</div>
