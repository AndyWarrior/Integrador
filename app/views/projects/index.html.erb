<p id="notice"><%= notice %></p>

<h1>Lista de Proyectos</h1>

<div class="table-responsive">
<table class="table" style="width: 100%;">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Ver Info', project, :class => "btn btn-primary cemex-blue btn-tablas btn-block btn-xs" %></td>
        <td><%= link_to 'Editar', edit_project_path(project), :class => "btn btn-primary cemex-blue btn-tablas btn-block btn-xs" %></td>
        <td><%= link_to 'Eliminar', project, :class => "btn btn-primary cemex-red btn-tablas btn-block btn-xs", method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<center>
<%= link_to 'Nuevo Proyecto', new_project_path, :class => "btn btn-lg btn-primary cemex-blue btn-otros btn-block" %>

<%= link_to 'Regresar', admin_root_path, :class => "btn btn-lg btn-primary cemex-blue btn-otros btn-block" %>
</center>