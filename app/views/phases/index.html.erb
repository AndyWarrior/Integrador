<p id="notice"><%= notice %></p>

<h1>Listado de Fases</h1>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

<table border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td><%= phase.numphase %></td>
        <td style="border:none;"><%= link_to 'Show', phase, class: 'btn btn-primary btn-xs' %></td>
        <td style="border:none;"><%= link_to 'Edit', edit_phase_path(phase), class: 'btn btn-primary btn-xs' %></td>
        <td style="border:none;"><%= link_to 'Destroy', phase, class: 'btn btn-primary btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phase', new_phase_path, class: 'btn btn-primary btn-xs' %>

<%= link_to 'Go Back', admin_root_path, class: 'btn btn-primary btn-xs' %>
