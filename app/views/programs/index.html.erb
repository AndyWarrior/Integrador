<p id="notice"><%= notice %></p>

<h2>Programas Registrados</h2>

<div class="table-responsive">
<table class="table" style="width: 100%;">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
    <tr>
      <td><%= program.name %></td>
      <td><%= link_to 'Ver Info', program, :class => "btn btn-primary cemex-blue btn-otros btn-xs" %></td>
      <td><%= link_to 'Editar', edit_program_path(program), :class => "btn btn-primary cemex-blue btn-otros btn-xs" %></td>
      <td><%= link_to 'Eliminar', program, method: :delete, data: { confirm: 'Â¿Eliminar Programa?'}, :class => "btn btn-primary cemex-red btn-otros btn-xs" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo Programa', new_program_path, :class => "btn btn-lg btn-primary cemex-blue btn-otros btn-block" %>

